@inject MythologyService MythologyService
@inject Microsoft.AspNetCore.Components.NavigationManager navigationManager

<PageTitle>Vanir</PageTitle>
<div class="page-container">
    <h1>Vanir</h1>

    @if (isLoading)
    {
        <div class="loading">
            <p>Loading...</p>
        </div>
    }
    else if (vanirItems.Any())
    {
        <MudText Typo="Typo.h6" >Male</MudText>
        <MudStack Style="margin-bottom: 2rem" Row="true" Wrap="Wrap.Wrap" Spacing="2">
            @foreach (var item in vanirItems)
            {
                if (item.Value.Tags.Contains("Male"))
                {
                    <tr style="width: 8rem;">
                        <td ><NavLink class="item" href="@($"/item/{item.Key}")">@item.Key</NavLink></td>
                    </tr>
                }
            }
        </MudStack>
