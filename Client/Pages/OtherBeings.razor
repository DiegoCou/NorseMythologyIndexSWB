
@page "/otherbeings"
@using MudBlazor
@using NorseMythologyIndex.Models
@using NorseMythologyIndex.Services
@inject MythologyService MythologyService

<PageTitle>Other Beings</PageTitle>
<div class="page-container">
    <h1>Other beings</h1>

    @if (isLoading)
    {
        <div class="loading">
            <p>Loading...</p>
        </div>
    }
    else if (mythItems.Any())
    {
        <MudContainer>
            <MudText Typo="Typo.h6" >Male</MudText>
            <MudStack Style="margin-bottom: 2rem" Row="true" Wrap="Wrap.Wrap" Spacing="2">
                @foreach (var item in mythItems)
                {
                    if (item.Value.Tags.Contains("Male"))
                    {
                        <tr style="width: 8rem;">
                            <td ><NavLink class="item" href="@($"/item/{item.Key}")">@item.Key.Split(" ")[0]</NavLink></td>
                        </tr>
                    }
                }
            </MudStack>
        </MudContainer>
        <MudContainer>
            <MudText Typo="Typo.h6" >Female</MudText>
            <MudStack Style="margin-bottom: 2rem" Row="true" Wrap="Wrap.Wrap" Spacing="2">
                @foreach (var item in mythItems)
                {
                    if (item.Value.Tags.Contains("Female"))
                    {
                        <tr style="width: 8rem;">
                            <td ><NavLink class="item" href="@($"/item/{item.Key}")">@item.Key</NavLink></td>
                        </tr>
                    }
                }
            </MudStack>
        </MudContainer>
        <MudContainer>
            <MudText Typo="Typo.h6" >Creature</MudText>
            <MudStack Style="margin-bottom: 2rem" Row="true" Wrap="Wrap.Wrap" Spacing="2">
                @foreach (var item in mythItems)
                {
                    if (item.Value.Tags.Contains("Creature"))
                    {
                        <tr style="width: 8rem;">
                            <td ><NavLink class="item" href="@($"/item/{item.Key}")">@item.Key</NavLink></td>
                        </tr>
                    }
                }
            </MudStack>
        </MudContainer>
    }
    else
    {
        <p>No Æsir Items found.</p>
    }
</div>

@code {
    private Dictionary<string, MythologyItem> mythItems = new();
    private bool isLoading = true;


    protected override async Task OnInitializedAsync()
    {
        mythItems = await MythologyService.GetItemsByTypeAsync("Other");
        isLoading = false;
    }

}

<style>
    .page-container {
        max-width: 60rem;
        margin: 0 auto;
        padding: 6rem;
        height: fit-content;
    }

    h1 {
        color: #2c3e50;
        margin-bottom: 2rem;
        font-size: 2.5rem;
        text-align: center;
    }
    .tables-container{
        margin:auto;
        width: fit-content;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-gap: 5rem;
    }
    .as-table{
        height: fit-content;
    }
    .item {
        margin: 0;
        padding: 0;
        text-decoration: none;
        color: black;
    }
    .loading {
        text-align: center;
        padding: 3rem;
        font-size: 1.2rem;
        color: #666;
    }
</style>


